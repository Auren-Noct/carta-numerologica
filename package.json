  },
  "main": "build-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "electron .",
    "build:frontend": "tsc -b && vite build",
    "build:electron": "tsc --project src/electron/tsconfig.json",
    "build:all": "pnpm run build:frontend && pnpm run build:electron",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist:win": "pnpm run build:all && electron-builder --win --x64",
    "dist:linux": "pnpm run build:all && electron-builder --linux --x64",
    "dist:mac": "pnpm run build:all && electron-builder --mac --arm64",
    "predeploy": "cross-env GH_PAGES=true pnpm run build:frontend",
    "deploy": "gh-pages -d dist-react"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
